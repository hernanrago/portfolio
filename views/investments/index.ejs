<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    
    <a href="/investments/new">New Investment</a>
    
    <% if (investments.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Broker</th>
            <th>Instrument</th>
            <th>Sold</th>
            <th>Purchase Price</th>
            <th>Current Price</th>
            <th>Return ARS %</th>
            <th>Return USD %</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% investments.forEach(function(investment) { %>
            <tr>
              <td><%= investment.id %></td>
              <td><%= investment.date %></td>
              <td>
                <% const broker = investment.getBroker(); %>
                <%= broker ? broker.name : 'N/A' %>
              </td>
              <td>
                <% const instrument = investment.getInstrument(); %>
                <%= instrument ? instrument.symbol : 'N/A' %>
              </td>
              <td><%= investment.sold ? 'Yes' : 'No' %></td>
              <td>$<%= investment.purchase_price.toFixed(2) %></td>
              <td>$<%= investment.current_price.toFixed(2) %></td>
              <td><%= investment.return_percentage_ARS.toFixed(2) %>%</td>
              <td><%= investment.return_percentage_USD.toFixed(2) %>%</td>
              <td>
                <a href="/investments/<%= investment.id %>">View</a>
                <a href="/investments/<%= investment.id %>/edit">Edit</a>
                <form method="POST" action="/investments/<%= investment.id %>/delete" style="display: inline;">
                  <button type="submit" onclick="return confirm('Are you sure?')">Delete</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <p>No investments found. <a href="/investments/new">Create your first investment</a>.</p>
    <% } %>
    
    <a href="/">Back to Home</a>
  </body>
</html>