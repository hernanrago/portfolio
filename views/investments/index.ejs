<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    
    <a href="/investments/new">New Investment</a>
    
    <% if (investments.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Broker</th>
            <th>Destination</th>
            <th>Instrument</th>
            <th>Nominals</th>
            <th>Currency</th>
            <th>Total Purchase</th>
            <th>Purchase Date Dollar</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% investments.forEach(function(investment) { %>
            <tr>
              <td><%= investment.id %></td>
              <td><%= investment.date %></td>
              <td><%= investment.broker || 'N/A' %></td>
              <td><%= investment.destination || 'N/A' %></td>
              <td><%= investment.instrument || 'N/A' %></td>
              <td><%= investment.nominals %></td>
              <td><%= investment.currency || 'N/A' %></td>
              <td><%= investment.total_purchase ? investment.total_purchase.toFixed(2) : '0.00' %></td>
              <td><%= investment.purchase_date_dollar ? investment.purchase_date_dollar.toFixed(2) : '0.00' %></td>
              <td>
                <a href="/investments/<%= investment.id %>">View</a>
                <a href="/investments/<%= investment.id %>/edit">Edit</a>
                <form method="POST" action="/investments/<%= investment.id %>/delete" style="display: inline;">
                  <button type="submit" onclick="return confirm('Are you sure?')">Delete</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <p>No investments found. <a href="/investments/new">Create your first investment</a>.</p>
    <% } %>
    
    <a href="/">Back to Home</a>
  </body>
</html>