<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    
    <form method="POST" action="/investments/<%= investment.id %>">
      <div>
        <label for="date">Date:</label>
        <input type="date" id="date" name="date" value="<%= investment.date %>" required>
      </div>
      
      <div>
        <label for="broker_id">Broker:</label>
        <select id="broker_id" name="broker_id" required>
          <option value="">Select broker...</option>
          <% brokers.forEach(function(broker) { %>
            <option value="<%= broker.id %>" <%= investment.broker == broker.name ? 'selected' : '' %>><%= broker.name %></option>
          <% }); %>
        </select>
      </div>
      
      <div>
        <label for="destination_id">Destination:</label>
        <select id="destination_id" name="destination_id" required>
          <option value="">Select destination...</option>
          <% destinations.forEach(function(destination) { %>
            <option value="<%= destination.id %>" <%= investment.destination == destination.name ? 'selected' : '' %>><%= destination.name %></option>
          <% }); %>
        </select>
      </div>
      
      <div>
        <label for="instrument_id">Instrument:</label>
        <select id="instrument_id" name="instrument_id" required>
          <option value="">Select instrument...</option>
          <% instruments.forEach(function(instrument) { %>
            <option value="<%= instrument.id %>" <%= investment.instrument == instrument.symbol ? 'selected' : '' %>><%= instrument.symbol %> - <%= instrument.name %></option>
          <% }); %>
        </select>
      </div>
      
      <div>
        <label for="nominals">Nominals:</label>
        <input type="number" step="1" id="nominals" name="nominals" value="<%= investment.nominals %>" required>
      </div>
      
      <div>
        <label for="currency">Currency:</label>
        <select id="currency" name="currency" required>
          <option value="">Select currency...</option>
          <option value="ARS" <%= investment.currency == 'ARS' ? 'selected' : '' %>>ARS</option>
          <option value="USD" <%= investment.currency == 'USD' ? 'selected' : '' %>>USD</option>
        </select>
      </div>
      
      <div>
        <label for="total_purchase">Total Purchase:</label>
        <input type="number" step="0.01" id="total_purchase" name="total_purchase" value="<%= investment.total_purchase %>" required>
      </div>
      
      <div>
        <label for="purchase_date_dollar">Purchase Date Dollar:</label>
        <input type="number" step="0.01" id="purchase_date_dollar" name="purchase_date_dollar" value="<%= investment.purchase_date_dollar %>" required>
      </div>
      
      <div>
        <button type="submit">Update Investment</button>
        <a href="/investments/<%= investment.id %>">Cancel</a>
      </div>
    </form>
  </body>
</html>