<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    
    <form method="POST" action="/investments">
      <div>
        <label for="date">Date:</label>
        <input type="date" id="date" name="date" required>
      </div>
      
      <div>
        <label for="broker_id">Broker:</label>
        <select id="broker_id" name="broker_id" required>
          <option value="">Select broker...</option>
          <% brokers.forEach(function(broker) { %>
            <option value="<%= broker.id %>"><%= broker.name %></option>
          <% }); %>
        </select>
      </div>
      
      <div>
        <label for="destination">Destination:</label>
        <input type="text" id="destination" name="destination" required>
      </div>
      
      <div>
        <label for="instrument_id">Instrument:</label>
        <select id="instrument_id" name="instrument_id" required>
          <option value="">Select instrument...</option>
          <% instruments.forEach(function(instrument) { %>
            <option value="<%= instrument.id %>"><%= instrument.symbol %> - <%= instrument.name %></option>
          <% }); %>
        </select>
      </div>
      
      <div>
        <label for="nominals">Nominals:</label>
        <input type="number" step="0.01" id="nominals" name="nominals" required>
      </div>
      
      <div>
        <label for="purchase_price">Purchase Price:</label>
        <input type="number" step="0.01" id="purchase_price" name="purchase_price" required>
      </div>
      
      <div>
        <label for="sold">Sold:</label>
        <input type="checkbox" id="sold" name="sold">
      </div>
      
      <div>
        <label for="total_purchase_ARS">Total Purchase ARS:</label>
        <input type="number" step="0.01" id="total_purchase_ARS" name="total_purchase_ARS">
      </div>
      
      <div>
        <label for="dollar_MEP_purchase_date">Dollar MEP Purchase Date:</label>
        <input type="number" step="0.01" id="dollar_MEP_purchase_date" name="dollar_MEP_purchase_date">
      </div>
      
      <div>
        <label for="total_purchase_USD">Total Purchase USD:</label>
        <input type="number" step="0.01" id="total_purchase_USD" name="total_purchase_USD">
      </div>
      
      <div>
        <button type="submit">Create Investment</button>
        <a href="/investments">Cancel</a>
      </div>
    </form>
  </body>
</html>