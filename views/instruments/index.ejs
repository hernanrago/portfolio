<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
      table { border-collapse: collapse; width: 100%; margin: 20px 0; }
      th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
      th { background-color: #f2f2f2; }
      .btn { padding: 5px 10px; margin: 2px; text-decoration: none; border-radius: 3px; }
      .btn-primary { background-color: #007bff; color: white; }
      .btn-success { background-color: #28a745; color: white; }
      .btn-danger { background-color: #dc3545; color: white; }
      .btn-secondary { background-color: #6c757d; color: white; }
      .status-active { color: #28a745; font-weight: bold; }
      .status-inactive { color: #dc3545; font-weight: bold; }
    </style>
  </head>
  <body>
    <h1><%= title %></h1>
    
    <a href="/instruments/new" class="btn btn-success">New Instrument</a>
    
    <% if (instruments.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Symbol</th>
            <th>Type</th>
            <th>Currency</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% instruments.forEach(function(instrument) { %>
            <tr>
              <td><%= instrument.id %></td>
              <td><%= instrument.name %></td>
              <td><%= instrument.symbol %></td>
              <td><%= instrument.type %></td>
              <td><%= instrument.currency %></td>
              <td class="<%= instrument.active ? 'status-active' : 'status-inactive' %>">
                <%= instrument.active ? 'Active' : 'Inactive' %>
              </td>
              <td>
                <a href="/instruments/<%= instrument.id %>" class="btn btn-primary">View</a>
                <a href="/instruments/<%= instrument.id %>/edit" class="btn btn-secondary">Edit</a>
                <form method="POST" action="/instruments/<%= instrument.id %>/delete" style="display: inline;">
                  <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <p>No instruments found. <a href="/instruments/new">Create your first instrument</a>.</p>
    <% } %>
    
    <a href="/">Back to Home</a>
  </body>
</html>