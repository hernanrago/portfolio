<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    
    <a href="/instruments/new">New Instrument</a>
    
    <% if (instruments.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Symbol</th>
            <th>Type</th>
            <th>Currency</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% instruments.forEach(function(instrument) { %>
            <tr>
              <td><%= instrument.id %></td>
              <td><%= instrument.name %></td>
              <td><%= instrument.symbol %></td>
              <td><%= instrument.type %></td>
              <td><%= instrument.currency %></td>
              <td><%= instrument.active ? 'Active' : 'Inactive' %></td>
              <td>
                <a href="/instruments/<%= instrument.id %>">View</a>
                <a href="/instruments/<%= instrument.id %>/edit">Edit</a>
                <form method="POST" action="/instruments/<%= instrument.id %>/delete" style="display: inline;">
                  <button type="submit" onclick="return confirm('Are you sure?')">Delete</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <p>No instruments found. <a href="/instruments/new">Create your first instrument</a>.</p>
    <% } %>
    
    <a href="/">Back to Home</a>
  </body>
</html>